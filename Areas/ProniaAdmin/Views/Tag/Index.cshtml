@using _16Nov_task.Models;
@model List<Tag>

@{
    int count = 0;
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">

            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Tag Table</h4>
                        <a asp-action="create" asp-controller="tag" class="card-title btn btn-success">Create Tag</a>

                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>
                                            No
                                        </th>
                                        <th>
                                            Name
                                        </th>
                                        <th>
                                            Settings
                                        </th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (Tag tag in Model)
                                    {
                                        count++;
                                        <tr>

                                            <td>
                                                @count
                                            </td>
                                            <td>
                                                @tag.Name
                                            </td>
                                            <td>
                                                <a asp-action="update" asp-controller="tag" asp-route-id="@tag.Id" class="btn btn-warning btn-info"><i class="mdi mdi-grease-pencil"></i></a>
                                                <a asp-action="delete" asp-controller="tag" asp-route-id="@tag.Id" class="btn btn-danger btn-info"><i class="mdi mdi-delete"></i></a>
                                                
                                            </td>
                                        </tr>
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


