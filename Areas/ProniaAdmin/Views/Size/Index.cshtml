@using _16Nov_task.Models;
@model PaginateVM<Size>

@{
    int count = (Model.CurrentPage - 1) * 2;
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">

            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Size Table</h4>
                        <a asp-action="create" asp-controller="size" class="card-title btn btn-success">Create Size</a>

                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>
                                            No
                                        </th>
                                        <th>
                                            Name
                                        </th>
                                        <th>
                                            Settings
                                        </th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (Size size in Model.Items)
                                    {
                                        count++;
                                        <tr>

                                            <td>
                                                @count
                                            </td>
                                            <td>
                                                @size.Name
                                            </td>
                                            <td>
                                                <a asp-action="update" asp-controller="size" asp-route-id="@size.Id" class="btn btn-warning btn-info"><i class="mdi mdi-grease-pencil"></i></a>
                                                <a asp-action="delete" asp-controller="size" asp-route-id="@size.Id" class="btn btn-danger btn-info"><i class="mdi mdi-delete"></i></a>

                                            </td>
                                        </tr>
                                    }

                                </tbody>
                            </table>
                        </div>
                        <nav aria-label="Page navigation example">
                            <ul class="pagination">
                                <li class="page-item @(Model.CurrentPage-1==0?"disabled":"")"><a class="page-link " asp-route-page="@(Model.CurrentPage-2)" asp-action="Index" asp-controller="Size">Previous</a></li>
                                @for (int i = 1; i < Model.TotalPage; i++)
                                {
                                    <li class="page-item @(i==Model.CurrentPage?"disabled":"")"><a class="page-link" asp-route-page="@(i-1)" asp-action="Index" asp-controller="Size">@i</a></li>
                                }

                                <li class="page-item @(Model.CurrentPage-1==Model.TotalPage?"disabled":"")"><a class="page-link" asp-route-page="@(Model.CurrentPage)" asp-action="Index" asp-controller="Size">Next</a></li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



