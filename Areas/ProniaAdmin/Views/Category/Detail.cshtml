@using _16Nov_task.Models;
@model List<Category>

@foreach (Category category in Model)
{
    <div class="card" style="width: 18rem;"> 
        <div class="card-body">
            <h3 class="card-title">Name: @category.Name</h3>
            <p class="card-text">Product Count: @category.Products.Count</p>
             @foreach (Product product in category.Products)
            {
                <div class="card" style="width: 18rem;">
                    <div class="card-body">
                        <h3 class="card-title">Name: @product.Name</h3>
                        <h5 class="card-title">SKU: @product.SKU</h5>
                        <h5 class="card-title">Sizes: @product.ProductSize</h5>
                        <h5 class="card-title">Price: @product.Price</h5>
                        <h5 class="card-title">Categories: @product.Category</h5>
                        <h5 class="card-title">Colors: @product.ProductColors</h5>
                        <h5 class="card-title">Tags: @product.ProductTags</h5>
                        <p class="card-text">Description: @product.Description</p>
                    </div>
                </div>
            } 
            
            <a asp-action="index" asp-controller="slide" class="btn btn-primary">Go category</a>
        </div>
    </div>
}
