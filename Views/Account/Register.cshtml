@model RegisterVM



        <main class="main-content">
            <div class="breadcrumb-area breadcrumb-height"
                 data-bg-image="assets/images/breadcrumb/bg/1-1-1919x388.jpg">
                <div class="container h-100">
                    <div class="row h-100">
                        <div class="col-lg-12">
                            <div class="breadcrumb-item">
                                <h2 class="breadcrumb-heading">Login & Register Page</h2>
                                <ul>
                                    <li>
                                        <a href="index.html">Home</a>
                                    </li>
                                    <li>Login | Register</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
           
                        <div class="col-lg-12 pt-5 pt-lg-0">
                            <form method="post">
                                <div class="login-form">
                                    <h4 class="login-title">Register</h4>
                                    <div class="row">
                                    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                                        <div class="col-md-6 col-12">
                                            <label asp-for="Name">Name</label>
                                            <input asp-for="Name" placeholder="Name" />
                                            <span class="text-danger" asp-validation-for="Name"></span>
                                        </div>
                                        <div class="col-md-6 col-12">
                                            <label asp-for="Surname">Surname</label>
                                            <input asp-for="Surname" placeholder="Surname" />
                                            <span class="text-danger" asp-validation-for="Surname"></span>
                                        </div>
                                        <div class="col-md-6 col-12">
                                            <label asp-for="Gender">Gender</label>
                                                <label for="option1">Qadın</label>
                                                <input type="radio" name="gender" value="female" id="female" asp-for="Gender" />
                                                <label for="option1">Kişi</label>
                                                <input type="radio" name="gender" value="male" id="male" asp-for="Gender" />
                                                <span class="text-danger" asp-validation-for="Gender"></span>
                                        </div>
                                        <div class="col-md-6 col-12">
                                            <label asp-for="Username">Username</label>
                                            <input asp-for="Username" placeholder="Username" />
                                            <span class="text-danger" asp-validation-for="Username"></span>
                                        </div>
                                        <div class="col-md-6 col-12">
                                            <label asp-for="Email">Email</label>
                                            <input type="email" asp-for="Email" placeholder="Email" />
                                            <span class="text-danger" asp-validation-for="Email"></span>
                                        </div>
                                        <div class="col-md-6 col-12">
                                            <label asp-for="Password">Password</label>
                                            <input type="password" asp-for="Password" placeholder="Password" />
                                            <span class="text-danger" asp-validation-for="Password"></span>
                                        </div>
                                        <div class="col-md-6 col-12">
                                            <label asp-for="ConfirmPassword">Confirm Password</label>
                                            <input asp-for="ConfirmPassword" placeholder="Confirm Password" />
                                            <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                                        </div>
                                        <div class="col-12">
                                            <button class="btn btn-custom-size lg-size btn-pronia-primary">
                                                Register
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </main>
        <!-- Main Content Area End Here -->
      
  
